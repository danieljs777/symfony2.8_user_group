{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="alert alert-success" role="alert"> <strong>Success!</strong> Use menu above to navigate. </div>
        
    {% else %}
        <div class="alert alert-warning" role="alert"> <strong>You are not authenticated!</strong> <a class="link" href="{{ path('login') }}"> Log In</a></div>
    {% endif %}
        </div>
    </div>
    

{% endblock %}

